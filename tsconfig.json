{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ESNext",
    "module": "esnext",
    "lib": [
      "ES2022"
    ],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "types": [
      "node"
    ],
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "typeRoots": [
      "node_modules/@types",
      "/src/global.d.ts"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
